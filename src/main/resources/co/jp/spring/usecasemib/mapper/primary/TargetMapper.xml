<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.jp.spring.usecasemib.mapper.primary.TargetMapper">
    <select id="findAll" resultType="co.jp.spring.usecasemib.model.Target">
        select *
        from T_PJ_List
    </select>
    <!--    <select id="findOne" resultType="co.jp.spring.usecasemib.model.Target">-->
    <!--        select * from T_PJ_List where project_id = #{projectId}-->
    <!--    </select>-->
    <insert id="add">
        insert into T_PJ_List (project_id, project_name, region, created_at, updated_at)
        values (#{projectId}, #{projectName}, #{region}, #{createdAt}, #{updatedAt})
    </insert>
    <update id="update">
        update T_PJ_List
        <set>
            <if test="projectName != null">project_name=#{projectName},</if>
            <if test="region != null">region=#{region},</if>
            <if test="updatedAt != null">updated_at=#{updatedAt},</if>
        </set>
        where project_id=#{projectId}
    </update>
    <delete id="delete">
        delete
        from T_PJ_List
        where project_id = #{projectId}
    </delete>
</mapper>
